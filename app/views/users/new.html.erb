<div class = "container">
  <% provide(:title, 'Sign up') %>
  
  <div class="row">
    <div class="mx-auto col-md-6 col-md-offset-3">
      <h1 class = "text-center">サインアップ</h1>
  
      <%= form_for(@user, url: signup_path) do |f| %>
        <%= render 'shared/error_messages' %>
  
        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form-control mt-2' %>
  
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: 'form-control mt-2' %>
  
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control mt-2' %>
  
        <%= f.label :password_confirmation, "パスワード確認用" %>
        <%= f.password_field :password_confirmation, class: 'form-control mt-2' %>
        <div class="text-center">
          <%= f.submit "作成！", class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>