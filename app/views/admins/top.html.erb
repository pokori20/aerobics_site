<div class = "container">
  <% provide(:title, "Log in") %>
  <div class="row">
    <div class="mx-auto col-md-6 col-md-offset-3">
      <h1 class = "text-center">管理者画面へようこそ</h1>
      <p class = "text-center mt-3">こちらで予定を入力できます。</p>
      <%= form_with modell: @event, url: events_path, local:true do |f| %>
        <label class="control-label" for="">場所</label>
        <%= f.text_field :place, class: 'form-control' %>
        
        <label class="control-label" for="">予定日時</label>
        <%= f.datetime_field :event_date, class: 'form-control' %>
        
        <div class ="text-center mt-3">
          <%= f.submit '登録', class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>